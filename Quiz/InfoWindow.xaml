<Window x:Class="QuizAdminPanel.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Info" Height="360" Width="450">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBox Name="InfoTextBox" TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MaxHeight="300" MaxWidth="400" MinHeight="300" MinWidth="400"/>
            <Button Name="OkBtn" Content="OK" Margin="3" Width="100" Click="OkBtn_Click"/>
        </StackPanel>        
    </Grid>
</Window>
